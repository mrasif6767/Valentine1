  <script>
    /* Typing animation */
    const text = "Farheen ğŸ’•";
    let index = 0;
    function typeText() {
      if (index < text.length) {
        document.getElementById("typing").innerHTML += text.charAt(index);
        index++;
        setTimeout(typeText, 150);
      }
    }
    typeText();

    /* No button runs away */
    const noBtn = document.getElementById("noBtn");
    noBtn.addEventListener("mouseover", () => {
      const x = Math.random() * (window.innerWidth - 150);
      const y = Math.random() * (window.innerHeight - 150);
      noBtn.style.left = `${x}px`;
      noBtn.style.top = `${y}px`;
    });

    /* Yes click */
    function yesClicked() {
      document.getElementById("page1").style.display = "none";
      document.getElementById("page2").style.display = "block";
      startLoveMessage();
    }

    /* Line-by-line love message */
    const loveLines = [
      "Farheen, my love ğŸ’•",
      "",
      "From the moment you came into my life, everything felt brighter and warmer.",
      "You turn my ordinary days into something beautiful just by being you.",
      "Your smile is my favorite sight, and your presence is my peace.",
      "",
      "I donâ€™t just choose you today as my Valentine â€” I choose you every single day.",
      "Through laughs, silly moments, challenges, and quiet times.",
      "",
      "You are my sweetheart, my safe place, my favorite person, and my forever.",
      "",
      "Thank you for loving me and making my heart feel so full.",
      "I promise to always care for you, respect you, and choose you.",
      "",
      "I love you endlessly, darling ğŸ’–ğŸ±ğŸŒ¹"
    ];

    let lineIndex = 0;
    function startLoveMessage() {
      if (lineIndex < loveLines.length) {
        const p = document.createElement("p");
        p.textContent = loveLines[lineIndex];
        document.getElementById("loveText").appendChild(p);
        lineIndex++;
        setTimeout(startLoveMessage, 900);
      }
    }

    /* Floating hearts generator */
    function createHeart() {
      const heart = document.createElement("div");
      heart.classList.add("heart");
      heart.textContent = "ğŸ’–";
      heart.style.left = Math.random() * 100 + "vw";
      heart.style.animationDuration = 4 + Math.random() * 3 + "s";
      document.body.appendChild(heart);

      setTimeout(() => {
        heart.remove();
      }, 7000);
    }

    setInterval(createHeart, 400);
  </script>

